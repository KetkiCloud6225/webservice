{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "aws_region": "",
        "source_ami": "",
        "aws_instance_type": "",
        "ssh_username": "",
        "demo_account_id":""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "{{user `aws_instance_type`}}",
			"security_group_id": "sg-01043e09b289d7d8d",            
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ami_name": "csye6225_{{timestamp}}",
            "ami_users": "{{user `demo_account_id`}}",
			"associate_public_ip_address": true,
            "tags":{
                "Name": "ketki-{{timestamp}}"
			},            
            "ami_description": "AWS Linux 2 AMI for web app"
		}
    ],	
    "provisioners": [
        {
			"source":"webservice.zip",
			"destination":"/home/ec2-user/webservice.zip",
			"type":"file"
		},
        {
					
            "type": "shell",
            "inline": [
                "sleep 30",
				"sudo yum -y update",
                "sudo yum install -y gcc-c++ make",
				"curl -sL https://rpm.nodesource.com/setup_10.x | sudo -E bash -",
                "sudo yum install -y nodejs",								
                "sleep 10",
                "ls -all",
                "sudo yum install unzip -y",            
                "cd ~/ && sudo mkdir webserver && sudo cp webservice.zip /webserver",
                "pwd",
                "ls -l",
                "cd ~/ && cd webserver && unzip webservice.zip",
                "sleep 20",
                "pwd",
                "ls -l",
                "npm install",
                "cd ~/",
                "sudo yum -y update",
                "sudo yum install ruby -y",
                "sudo yum install wget -y",
                "wget https://aws-codedeploy-us-east-1.s3.us-east-1.amazonaws.com/latest/install",
                "chmod +x ./install",
                "sudo ./install auto",
                "sudo service codedeploy-agent start",
                "sudo service codedeploy-agent status"
            ]		
        },
        {
			"destination":"/tmp/",
			"source":"webservice.service",
			"type":"file"  
		}, {
            "destination":"/home/ec2-user/",
            "source":"webapp.sh",
            "type":"file"
        },{
			"type": "shell",
            "inline": [
				"sudo cp /tmp/webservice.service /etc/systemd/system"              				
			]
			
		}    
    ]
}