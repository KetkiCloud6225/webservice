{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "aws_region": "",
        "source_ami": "",
        "aws_instance_type": "",
        "ssh_username": "",
        "demo_account_id":""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "{{user `aws_instance_type`}}",
			"security_group_id": "sg-01043e09b289d7d8d",            
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ami_name": "csye6225_{{timestamp}}",
            "ami_users": "{{user `demo_account_id`}}",
            "ami_block_device_mappings": [
                {
                "delete_on_termination": true,
                "device_name": "/dev/xvda",
                "volume_size": 20,
                "volume_type": "gp2"
                }
            ],            
			"associate_public_ip_address": true,
            "tags":{
                "Name": "csye-{{timestamp}}"
			},            
            "ami_description": "AWS Linux 2 AMI for web app"
		}
    ],	
    "provisioners": [
        {
			"source":"webservice.zip",
			"destination":"/home/ec2-user/webservice.zip",
			"type":"file"
		},
        {
            "type": "file",
            "source": "webservice.service",
            "destination": "/home/ec2-user/webservice.service"
		},
        {
					
            "type": "shell",
            "inline": [
                "sleep 30",
				"sudo yum -y update",
				"curl -sL https://rpm.nodesource.com/setup_14.x| sudo -E bash -",
                "sudo yum install -y nodejs",								
                "sleep 10",
                "ls -all",
                "sudo yum -y install zip",
                "cd ~/ && unzip webservice.zip",
                "sleep 20",
                "sudo npm install nodemon",
                "sudo npm install",
                "sudo npm update",
                "sudo mv /home/ec2-user/webservice.service /etc/systemd/system/webservice.service",
                "sudo systemctl start webservice.service",
                "sudo systemctl enable webservice.service"
            ]		
        }

           
    ]
}